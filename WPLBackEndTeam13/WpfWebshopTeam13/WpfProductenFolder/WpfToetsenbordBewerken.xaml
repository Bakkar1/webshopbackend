    <Viewbox Stretch="UniformToFill" ClipToBounds="True">
        <Grid>
            <StackPanel HorizontalAlignment="Center" Height="1080" Width="1920">
                <Label Content="Categorie: Toetsenbord"   FontSize="20" Margin="20"/>
                <WrapPanel Height="1080">
                    <StackPanel Width="600" Margin="20">

                        <Label Content="Producttype"    FontSize="16"/>
                        <TextBox x:Name="TxtProducttypeToetsenbord" MaxLength="59" TextWrapping="Wrap" Text="" FontSize="16" Margin="0,0,0,10"/>
                        <WrapPanel>
                            <StackPanel Width="300" Margin="0,0,0,10">
                                <Label Content="Basisprijs"  FontSize="16"/>
                                <TextBox x:Name="TxtPrijsToetsenbord" MaxLength="8" FontSize="16"  Margin="0,0,20,0" TextWrapping="Wrap" Text="" />
                            </StackPanel>
                            <StackPanel Width="300">
                                <Label Content="Korting" FontSize="16"/>
                                <TextBox x:Name="TxtKortingToetsenbord" FontSize="16" MaxLength="8"  TextWrapping="Wrap" Text="" />
                            </StackPanel>
                        </WrapPanel>
                        <Label Content="Uitgebreide beschrijving"    FontSize="16"/>
                        <TextBox x:Name="Txtuitgebr_beschrijvingToetsenbord" MaxLength="3998" Height="200" Margin="0,0,0,10" FontSize="16" TextWrapping="Wrap" Text="" />
                        <Label Content="Korte beschrijving" FontSize="16"/>
                        <TextBox x:Name="TxtKleineBeschrijvingToetsenbord" MaxLength="998" Height="54" Margin="0,0,0,10" FontSize="16"  TextWrapping="Wrap" Text=""  />

                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="300">
                                <Label Content="Kleur"   FontSize="16"/>
                                <TextBox x:Name="TxtKleurToetsenbord" FontSize="16" MaxLength="19"  TextWrapping="Wrap" Text="" Margin="0,0,20,0" />
                            </StackPanel>
                            <StackPanel Width="300">
                                <Label Content="Voorraad"   FontSize="16"/>
                                <TextBox x:Name="TxtVoorraadToetsenbord" FontSize="16" MaxLength="9" TextWrapping="Wrap" Text="" />
                            </StackPanel>
                        </WrapPanel>

                        <Label Content="Afbeeldingen"  FontSize="16"/>
                        <TextBox x:Name="TxtImagesToetsenbord" Height="200" FontSize="16" MaxLength="1000" Margin="0,0,0,10"  TextWrapping="Wrap" Text="" />

                    </StackPanel>
                    <StackPanel Width="600" Margin="20">
                        <Label Content="Model (Azerty/Qwerty)" FontSize="16"/>
                        <TextBox x:Name="TxtModel"  TextWrapping="Wrap" Text="" MaxLength="6"  Margin="0,0,0,10" FontSize="16" />
                        <Label Content="Numeriek klavier (J/N)"   FontSize="16"/>
                        <TextBox x:Name="TxtNumeriekKlavier"  TextWrapping="Wrap" MaxLength="1" Margin="0,0,0,10" FontSize="16" Text="" />
                        <Label Content="Verbinding"   FontSize="16"/>
