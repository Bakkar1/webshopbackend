                        <Label Content="Poorten"  FontSize="16"/>
                        <TextBox x:Name="TxtInput_and_output"  TextWrapping="Wrap" Text="" Margin="0,0,0,10"  FontSize="16" MaxLength="299" Height="100"/>
                        <Label Content="Audio" FontSize="16"/>
