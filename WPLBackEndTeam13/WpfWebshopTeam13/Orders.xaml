<Window x:Class="WpfWebshopTeam13.Orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWebshopTeam13"
        mc:Ignorable="d"
        Title="Orders" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="DtGridOrders" HorizontalAlignment="Left" Height="320" Margin="0,101,0,-0.333" VerticalAlignment="Top" Width="793"/>
        <TextBox x:Name="TxtKlantNummer" HorizontalAlignment="Left" Height="23" Margin="41,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TxtKlantNummer_TextChanged"/>
        <ComboBox x:Name="CmbStatus" HorizontalAlignment="Left" Margin="254,38,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbStatus_SelectionChanged"/>
        <DatePicker x:Name="DtPickerOrders" HorizontalAlignment="Left" Margin="432,35,0,0" VerticalAlignment="Top" CalendarClosed="DtPickerOrders_CalendarClosed"/>

    </Grid>
</Window>
